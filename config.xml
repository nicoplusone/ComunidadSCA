<?xml version='1.0' encoding='utf-8'?>
<widget id="com.comunidadcsa" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Comunidad SCA</name>
    <description>
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Grupo Wellness Latina
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <platform name="android">
	    <icon src="res/icon/android/icon-36-ldpi.png" density="ldpi"/>
	    <icon src="res/icon/android/icon-48-mdpi.png" density="mdpi"/>
	    <icon src="res/icon/android/icon-72-hdpi.png" density="hdpi"/>
	    <icon src="res/icon/android/icon-96-xhdpi.png" density="xhdpi"/>
	    <icon src="res/icon/android/mstile-150x150.png" density="xxhdpi"/>
	    <icon src="res/icon/android/mstile-310x310.png" density="xxxhdpi"/>
	  </platform>
    <access origin="*" />
    <access origin="whatsapp:*" launch-external="yes" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
